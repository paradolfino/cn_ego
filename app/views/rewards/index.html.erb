<div>
  <h1>All Rewards [<%= link_to "New", new_reward_path %>]</h1>

  <br>

  <table>
    <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td>
          <p><%= image_tag(url_for(reward.img)) if reward.img %></p>
          <p><%= reward.name %> (Costs: <%= reward.cost %>)</p>
          <p><%= link_to "View", reward_path(reward) %> | <%= link_to "Edit", edit_reward_path(reward) %>
            | <%= link_to "Delete", reward_path(reward), method: :delete, data: { confirm: 'Are you sure you wish to delete this reward?' } %> </p>
        </td>
      </tr>
    <% end %>
    </tbody>

  </table>
</div>