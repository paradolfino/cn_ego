<div>
  <h1>All Rewards [<%= link_to "New", new_reward_path %>]</h1>

  <br>

  <table>
    <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td>
          <p><%= reward.img %></p>
          <p><%= reward.name %></p>
        </td>
        <td></td>
        <td><%= link_to "View", reward_path(reward) %> | <%= link_to "Edit", edit_reward_path(reward) %> | <%= link_to "Delete", reward_path(reward), method: :delete, data: { confirm: 'Are you sure you wish to delete this reward?' } %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
</div>