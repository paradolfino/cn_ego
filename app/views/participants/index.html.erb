<h1>All Participants</h1>


<table>
    <thead>
        <th>Name</th>
        <th>Points</th>
        <th>Options</th>
    </thead>
    <tbody>
        <% @participants.each do |participant| %>
            <tr>
                <td><%= participant.name %></td>
                <td><%= participant.points %></td>
                <td><%= link_to "View", participant_path(participant) %>, <%= link_to "Delete", participant_path(participant), method: :delete, data: { confirm: 'Are you sure you wish to delete this participant?' }, :remote => true, :class => 'delete_part' %></td>
            </tr>
        <% end %>
    </tbody>
    
</table>

<script type="text/javascript">
    $('.delete_part').bind('ajax:success', function() {  
        $(this).closest('tr').fadeOut();
    });  
</script>