<%= form_for @participant do |f| %>
    <p><%= f.text_field :name, placeholder: "#{@keywords[:name]} the Participant's Name", class: "form-field", name: "name" %></p>
    <p><%= f.text_field :points, placeholder: "#{@keywords[:points][0]} the Participant's #{@keywords[:points][1]} points", class: "form-field", name: "points" %></p>
    <p><%= f.submit "#{@keywords[:submit]} Participant", class: "form-btn" %></p>
    
<% end %>

<% if @participant.errors %>
    <% @participant.errors.full_messages.each do |m| %>
        <script type="text/javascript">
            toastr.error('<%= m %>');
        </script>
    <% end %>
<% end %>