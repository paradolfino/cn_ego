<div>
  <%= form_for @user do |f| %>
      <p><%= f.text_field :name, placeholder: "Enter a Name", class: "form-field" %></p>
      <p><%= f.text_field :email, placeholder: "Enter an Email", class: "form-field" %></p>
      <p><%= f.password_field :password, placeholder: "Enter a new Password", class: "form-field" %></p>
      <p><%= f.password_field :password_confirmation, placeholder: "Reenter new Password", class: "form-field" %></p>
      <%= f.submit "Update" %>
  <% end %>
</div>
